{
  "compilerOptions": {
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["types"]
  },
  "compileOnSave": true,
  "exclude": [
    "build",
    "node_modules",
    "bower_components/reflect-metadata/",
    "bower_components/**/test/*"
  ]
}